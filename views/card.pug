div(class='col col-md-4')
	div(class='card')
		a(href='good?id=' + val['id'])
			h3(class='card-title text-center') #{val['name']}
			img(
				src='img/' + val['image']
				class='card-images'
			)
			p(class='text-center') #{(val['cost'] / 100).toFixed(2).replace(/\d(?=(\d{3})+\.)/g, '$& ')} руб
		ul(class='card-actions')
			li
				button(
					data-good_id = val['id']
					class='button button-primary add-to-cart'
				) в корзину